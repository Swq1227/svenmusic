/* pages/index/index.wxss */

.banners {
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}

/* 五个图标的样式 */
.navContainer {
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: #F01313;
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0;
}

.navItem text{
  font-size: 26rpx;
}