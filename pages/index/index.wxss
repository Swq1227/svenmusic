/* pages/index/index.wxss */

.banners {
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}

/* 五个图标的样式 */
.navContainer {
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: #F01313;
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0;
}

.navItem text{
  font-size: 26rpx;
}

/* 推荐歌曲样式 */
.recommendContainer{
  padding: 20rpx;
}

.recommendContainer .header .title{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #666;
}

.recommendContainer .header .more{
  float: right;
  border:1rpx solid #333;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
}

/* 内容区样式 */
.recommendScroll{
  display: flex;
  margin-top: 10rpx;
}


.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
  
}
.scrollItem text{
  font-size: 26rpx;
  /* 单行文本溢出隐藏 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}