.recommendDongContainer .header{
  width: 100%;
  height: 300rpx;
  position: relative;
}

.recommendDongContainer .header image{
  width: 100%;
  height: 100%;
}

.recommendDongContainer .header .date{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -360rpx;
  margin-top: -30rpx;
  width: 100%;
  height: 100rpx;
  border: 1rxp solid red;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}

.header .day{
  font-size: 38rpx;
}

/* 列表区域样式 */
.ListContainer{
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
}

.ListHeader{
  height: 80rpx;
  line-height: 80rpx;
}

.ListHeader .selectMore{
  float: right;
}

/* 内容区 */
.scrollItem{
  position: relative;
  display: flex;
}
.scrollItem image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.musicInfo{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.musicInfo text{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
}
.scrollItem .iconfont{
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  padding-right: 20rpx;
}
